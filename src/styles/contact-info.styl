//
// Contact info
// --------------------------------------------------


.contact-info
  reset-list()
  margin rem(5px) 0

  @media print
    columns 2
    width: 6.2in
    margin-left: auto
    margin-right: auto

  li,
  a
    h5()
    margin 0
    color $storm-dust
    hover-color $blue
    white-space nowrap

  i
    margin-right .5em
    color $mountain-mist

  .fa-github
    color $montana

  .fa-twitter
    color $picton-blue

  .fa-linkedin
    color $french-blue
