//
// Profile
// --------------------------------------------------


.profile
  padding 80px 0 0
  background-color $gallery
  text-align center
  border-bottom 1px solid $alto

  +has(picture)
    img-circle()
    max-width 220px

  +has(name)
    uppercase()
    margin-right .5em
    margin-left .5em
    margin-bottom 0
    font-size responsive 25px 32px
    line-height 1.2

  +has(title)
    bold()
    h4()
    color $storm-dust
    margin-top 0

  +has(location)
    italic()
    font-size 1.1rem
    margin-bottom 30px

    .fa
      color lighten($storm-dust, 25%)
      margin-right 0.5em

  +has(additional-info)
    inline-list()
    uppercase()
    margin-top 45px

    li
      italic()
      lost-column 1/3 3 0
      min-height 9.5em
      padding-top 1.5em
      border-top 1px solid $alto
      border-right 1px solid $alto
      //border-bottom 1px solid $alto
      font-size 0.7rem


      &:last-child
        border-right none
        padding-top 1em

    +has(value)
      h2()
      margin 0
