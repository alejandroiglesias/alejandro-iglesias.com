//
// Typography
// --------------------------------------------------


// Typography baseline

typography()


// Headings

h1, h2, h3, h4, h5, h6
  margin 1em 0 .5em 0

  small,
  .small
    bold()
    color $storm-dust
    font-size .6em


// Alignment

.text-nowrap
  white-space nowrap


// Contextual colors

.text-muted
  color $storm-dust


// Lists

ul
  li
    list-style-type 'â™¦ '

.list-unstyled
  reset-list()

.list-inline
  inline-list()


// Font faces

font-face('proxima-nova')
font-face('proxima-nova', 'normal', 'italic')
font-face('proxima-nova', 'bold')
font-face('proxima-nova', 'bold', 'italic')


// Various

.position
  @extend .text-muted
  h5()
  margin-top -1em
