.nav
  reset-list()

  a
    h4()
    link(black, 'darken')
    display block
    padding 0.65em 1.5em
    margin 0
    border-bottom 1px solid $alto
    background-color inherit
    color $mountain-mist
    hover-color $gallery

    i
      h3()
      margin 0 1em 0 0
